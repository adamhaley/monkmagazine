body
	display grid
	color #000
	background-color #fff
	grid-template-columns 1fr 6fr 1fr
	font-family: 'Oswald', sans-serif;
	font-size .9em
	font-leading .6em
	font-kerning normal

header
	img
		margin .2em
		float left
		width 100%

ul.nav-menu
	display none
	list-style none
	background-color #fff
	width 100%
	height 100%
	position absolute
	top 0
	left 0
	z-index 1000
	opacity 0
	transition all ease-in-out .3s
	&.active
		display block
		opacity 1


	li:first-child
		margin-top 10em
	li
		align center
		margin-left auto
		margin-right auto
		margin-top 1em
		a
			text-decoration none
			color #000
			text-align center
			display block
			&:hover
				color #fb0303
				text-decoration underline

.hamburger
	cursor pointer
	margin-right .2em
	margin-top .5em

	float right
	width 2em
	height 2em

	position absolute
	top 0
	right 0
	z-index 2000
	img
		width 80%
		height 80%

	.menu
		display block
	.close
		display none
	&.active
		.menu
			display none
		.close
			display block

img.simple-mobile-true
	width 80%
	margin-top 6%
	margin-bottom 2%

img.monks-home
	grid-column-start 2
	grid-column-end 5

img.read-this
	height 1.5em
	margin-top 1.5em

img.more
	height 1.4em
	margin-top 1.5em

.container
	display grid
	grid-template-columns 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr
	gap 1em
	.row
		grid-column-start 2
		grid-column-end 9

	.content
		grid-column-start 5
		grid-column-end 9

