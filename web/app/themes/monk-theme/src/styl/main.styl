body
	display grid
	color #000
	background-color #fff
	grid-template-columns 1fr 6fr 1fr
	font-family: Impact,Haettenschweiler,Franklin Gothic Bold,Charcoal,Helvetica Inserat,Bitstream Vera Sans Bold,Arial Black,sans serif

header
	img
		margin .2em
		float left
		width 100%

.nav-menu
	display none
	float right
	ul
		list-style none
		li
			display inline-block
			margin-left 1em
			a
				text-decoration none
				color #000
				&:hover
					color #000
					text-decoration underline

.hamburger
	cursor pointer
	margin-right .2em
	margin-top .5em

	float right
	width 2em
	height 2em

	img
		width 80%
		height 80%

	.menu
		display block
	.close
		display none
	&.active
		.menu
			display none
		.close
			display block

img.simple-mobile-true
	width 80%
	margin-top .5em
	margin-bottom .5em

img.monks-home
	grid-column-start 2
	grid-column-end 5

.container
	display grid
	grid-template-columns 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr
	gap .5em
	.row
		grid-column-start 2
		grid-column-end 9

	.content
		grid-column-start 5
		grid-column-end 9
		border 1px solid #000

