		margin-top -1em
		margin-bottom 1em
		grid-column-start 7
		grid-column-end 11
		img
			width 80%
			height auto
			margin-right .2em
	.xs &
		margin-top 0
		margin-bottom 1em
		grid-column-start 1
		grid-column-end 9
		img
			width 80%
			height auto
			margin-right .2em

.on-the-road
	display grid
	grid-column-start 1
	grid-column-end 10
	text-decoration none
	padding .5em
	width 100%
	margin-top 1em

	.on-the-road-with-the-monks
		height auto
		max-width 100%

	p
		margin-top 1em
		float left
		width 50%
		padding-right .5em
		.xs &, .sm &, .md &
			width 100%
			float none
			margin-top 1em

	#monk-on-the-road
		float right
		width 50%
		max-width 100%

		.xs &, .sm &, .md &
			width 100%
			float none
			margin-top .5em
			margin-bottom 1em

	.more-thrills
		margin-top 1em
		height 1em
		img
			display inline-block
			margin-right .2em
			max-width none
			height 1em
		i
			position relative
			display inline-block
			color #000 !important
			&:hover
				color #fb0303 !important

.overflow-bottom
	display block
	cursor pointer
	height 0em
	margin-top 1em
	transition all ease-in-out .2s
	grid-column-start 1
	grid-column-end 10
	grid-row-start 2
	grid-row-end 3

	i.fa
		display none

	.in &
		height 1em
		background-color #fb0303

		i.fa
			margin-right.5em
