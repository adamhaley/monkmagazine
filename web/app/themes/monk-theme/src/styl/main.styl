body
	display grid
	color #000
	background-color #fff
	grid-template-columns 1fr 6fr 1fr
	font-family: 'Oswald', sans-serif;
	font-size .9em
	font-leading .6em
	font-kerning normal

header
	img
		margin .2em
		float left
		width 100%

.fa-plus:hover
	color #fb0303


ul.nav-menu
	display none
	opacity 0
	list-style none
	background-color #fff
	width 100%
	height 100%
	position absolute
	top -100px
	left 0
	z-index 1000
	opacity 0
	transition all linear .2s
	&.active
		top 0
		opacity 1
		transition all ease-in-out .2s

	&.displayed
		display block

	li:first-child
		margin-top 10em
	li
		align center
		margin-left auto
		margin-right auto
		margin-top 1em
		a
			text-decoration none
			color #000
			text-align center
			display block
			&:hover
				color #fb0303
				text-decoration underline

.hamburger
	cursor pointer
	margin-right .2em
	margin-top .5em

	float right
	width 2em
	height 2em

	position absolute
	top 0
	right 0
	z-index 2000
	img
		width 80%
		height 80%

	.menu
		display block
	.close
		display none
	&.active
		.menu
			display none
		.close
			display block

img.simple-mobile-true
	width 80%
	margin-top 6%
	margin-bottom 2%

img.monks-home
	grid-column-start 2
	grid-column-end 5

img.read-this
	height 1.5em
	margin-top 1.5em

img.more
	cursor pointer
	height 1.4em
	margin-top 1.5em

a.more-link
	display block
	text-decoration none
	padding .5em
	height .8em
	img
		display inline-block
		margin-right .2em
	i
		position relative
		top -5px
		display inline-block
		color #000 !important
		text-shadow 1px 1px 1px #000 !important
		&:hover
			color #fb0303 !important

.gutter
	width 100%
	grid-row span 5

.container
	display grid
	grid-template-columns 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr
	gap 1em
	.row
		grid-column-start 2
		grid-column-end 9

	.buy
		margin-top 4em
		grid-column-start 1
		grid-column-end 4

	a.cart
		display block
		text-decoration none
		padding .5em
		height .8em
		margin-top 4em
		grid-column-start 9
		grid-column-end 10
		img
			display inline-block
			margin-right .2em
		i
			font-weight 600
			position relative
			color #000 !important
			&:hover
				color #fb0303 !important

	.content
		grid-column-start 5
		grid-column-end 9

	.back-issues
		display grid
		grid-column-start 1
		grid-column-end 9
		grid-template-columns 1fr 1fr 1fr 1fr 1fr 1fr
		gap 2em
