body
	display grid
	color #000
	background-color #fff
	grid-template-columns 1fr 6fr 1fr

header
	max-width 30em
	min-height 5em

	img
		margin .2em
		float left
		width 90%

.nav-menu
	display none
	float right
	ul
		list-style none
		li
			display inline-block
			margin-left 1em
			a
				text-decoration none
				color #000
				&:hover
					color #000
					text-decoration underline

.hamburger
	cursor pointer
	margin-right .2em
	margin-top .5em

	float right
	width 2em
	height 2em
	.menu
		display block
	.close
		display none
	&.active
		.menu
			display none
		.close
			display block

img.simple-mobile-true
	width 70%
	max-width 30em
	margin-left auto
	margin-right auto
	margin-left auto

img.monks-home


.container
	grid-template-columns 5fr 3fr
	grid-template-rows 1fr 1fr
	grid-template-areas
		"img content"


