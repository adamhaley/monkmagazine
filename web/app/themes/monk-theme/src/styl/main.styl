
body
	color #000
	background-color #fff

header
	max-width 40em
	min-height 5em
	img
		float left
		width 90%

.nav-menu
	display none
	float right
	ul
		list-style none
		li
			display inline-block
			margin-left 1em
			a
				text-decoration none
				color #000
				&:hover
					color #000
					text-decoration underline

.hamburger
	display block
	cursor pointer
	float right
	margin-top 1em
	margin-right 1em
	width 2em
	height 2em
	.menu
		display block
	.close
		display none
	&.active
		.menu
			display none
		.close
			display block

img.simple-mobile-true
	width 70%
	max-width 30em
	margin-left auto
	margin-right auto
	margin-left auto

img.monks-home
	float left

.container
	max-width 40em



