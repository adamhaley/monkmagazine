body
	font-family: 'Oswald', sans-serif;
	font-size .9em
	line-height 1.2em


.container
	margin 0 auto
	width 70%
	max-width 1200px
	padding 0 20px

.wp-block-post-title
	line-height 1.2em

img.attachment-woocommerce_single
	transform scale(1)
	transition all ease-in-out .2s
	&:hover
		transform scale(1.05)


a
	color #000
	&:hover
		color #fb0303

button.wp-block-button__link
	color #fff
	background-color #000
	border none
	padding 10px 20px
	&:hover
		background-color #fb0303
		color #fff

.added_to_cart
	margin-left 1em
